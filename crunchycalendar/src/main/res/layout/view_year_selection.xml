<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/arrow_left"
        style="@style/ClickableView.YearSelectionArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/calendar_date_today_text_color"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/year_text_view"
        style="@style/ClickableView.YearSelectionText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="2017 Год"
        android:textColor="@color/calendar_month_text_color" />

    <ImageView
        android:id="@+id/arrow_right"
        style="@style/ClickableView.YearSelectionArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/calendar_date_today_text_color"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_24dp"
        tools:ignore="ContentDescription" />

</LinearLayout>