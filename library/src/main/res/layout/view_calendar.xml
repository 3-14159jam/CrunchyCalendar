<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/days_container"
        style="@style/CalendarWeekDaysBar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day_1"
            style="@style/CalendarWeekDay"
            tools:text="ПН" />

        <TextView
            android:id="@+id/day_2"
            style="@style/CalendarWeekDay"
            tools:text="ВТ" />

        <TextView
            android:id="@+id/day_3"
            style="@style/CalendarWeekDay"
            tools:text="СР" />

        <TextView
            android:id="@+id/day_4"
            style="@style/CalendarWeekDay"
            tools:text="ЧТ" />

        <TextView
            android:id="@+id/day_5"
            style="@style/CalendarWeekDay"
            tools:text="ПТ" />

        <TextView
            android:id="@+id/day_6"
            style="@style/CalendarWeekDay"
            tools:text="СБ" />

        <TextView
            android:id="@+id/day_7"
            style="@style/CalendarWeekDay"
            tools:text="ВС" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/calendar_week_days_bar_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/calendar_week_days_bar_height"
        android:background="@drawable/shadow" />

</merge>